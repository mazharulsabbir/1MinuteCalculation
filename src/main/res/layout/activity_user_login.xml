<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".User_LogOn_Reg.UserLogin">

    <include layout="@layout/toolbar_custom" />

    <TextView
        android:padding="15dp"
        android:id="@+id/jhdfg38"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dosis"
        android:gravity="center"
        android:text=""
        android:textColor="@color/headingColor"
        android:textSize="26sp" />

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"

            android:text="Username / Email Address :"
            android:textColor="@color/textColor"
            android:visibility="gone" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email"
            android:ems="10"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nunito_regular"
            android:hint="Username / Email"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"
            android:text="Password :"

            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_password"
            android:ems="10"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nunito_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/textColor"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/white"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBoxRememberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/nunito_regular"
            android:text="Remember Me"
            android:textColorLink="@color/colorBlue" />

        <Button
            android:id="@+id/button"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_login_style"
            android:fontFamily="@font/nunito_regular"
            android:onClick="loginPress"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito_regular"
            android:onClick="Registration"
            android:text="Create a new account"
            android:textAllCaps="false"
            android:textColor="@color/headingColor"
            android:textSize="14sp" />
    </LinearLayout>
    <include layout="@layout/banner_ads"/>

</RelativeLayout>