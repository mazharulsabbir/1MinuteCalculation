<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".User_LogOn_Reg.Registration">

    <include
        android:id="@+id/toolbar_id"
        layout="@layout/toolbar_custom"/>

    <LinearLayout
        android:layout_below="@+id/toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"
            android:text="Name :"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="5dp"
            android:ems="10"
            android:fontFamily="@font/nunito_regular"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/textColor"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@color/colorBlue"
            android:textCursorDrawable="@android:color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"

            android:text="Username / Email Address :"
            android:textColor="@color/textColor"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:drawableLeft="@drawable/ic_email"
            android:ems="10"
            android:drawablePadding="5dp"

            android:fontFamily="@font/nunito_regular"
            android:hint="Username / Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/textColor"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"
            android:text="Password :"

            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:drawableLeft="@drawable/ic_password"
            android:ems="10"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nunito_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/textColor"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"

            android:text="Re Type Password :"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mRePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_password"
            android:ems="10"
            android:drawablePadding="5dp"

            android:fontFamily="@font/nunito_regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/textColor"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_login_style"
            android:fontFamily="@font/nunito_regular"
            android:onClick="saveAndContinue"
            android:text="SAVE AND CONTINUE"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@android:color/white" />
    </LinearLayout>

    <include layout="@layout/banner_ads" />

</RelativeLayout>